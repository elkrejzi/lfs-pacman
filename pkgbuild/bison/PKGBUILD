pkgname=bison
pkgver=3.0.4
pkgrel=1
pkgdesc="The GNU general-purpose parser generator"
arch=('x86_64')
url="https://www.gnu.org/software/bison/"
license=('GPL3')
#depends=()
options=(staticlibs)
source=("https://ftp.gnu.org/gnu/bison/bison-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/bison-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/bison-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('bbdc23e7772e49da1c7c47e66d4e4efbfbfe9b21dbc59bf3ad9a6e573eecac6c9f52c7f11a64be9897e8deb99ef7ba015164aa8232aa391b901dd7db03632412')
