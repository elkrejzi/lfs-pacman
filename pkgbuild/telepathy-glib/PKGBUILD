pkgname=telepathy-glib
pkgver=0.24.1
pkgrel=1
pkgdesc="GLib bindings for the Telepathy D-Bus protocol"
arch=('x86_64')
url="https://telepathy.freedesktop.org"
license=('LGPL2.1')
#depends=()
source=("https://telepathy.freedesktop.org/releases/telepathy-glib/telepathy-glib-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/telepathy-glib-${pkgver}"

	./configure --prefix=/usr --enable-vala-bindings

	make
}

package() {
	cd "${srcdir}/telepathy-glib-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('2fed94f76a19d6069f671cdd45d2fd8a4b4ad27c4601aff66041ca205456be397c76a86f92cc9bf20fa4eb6d4c15a67ed8196644c143c37e945f382229a63335')
